<div>
    {{header-component home=true user=model.currentUser}}

    <div class="col-md landing-header not-transparent">

        <div class="landing-header-label">
            <div class="free-reservation-label">Make a free reservation</div>
            <div class="number-of-restaurants-label">Choose your table from {{model.numberOfRestaurants}} restaurants near you</div>
            <div class="landing-search-bar">
                {{search-bar textSearch=true loading=findingTable findTableAction="searchRestaurants"}}
            </div>

        </div>
        <img class="img-fluid" src="/images/landing_cover.png">
    </div>

    {{#if model.popularRestaurants}} 
        <div class="container landing-popular-restaurants">
            <div class="row">
                <div class="col-md">
                    <div class="landing-popular-restaurants-label">Popular for Lunch Today</div>
                </div>
            </div>
            <div class="row">
                {{#each model.popularRestaurants as |restaurant|}}
                    <div class="col">
                        {{restaurant-tile restaurant=restaurant}}
                    </div>
                {{/each}} 
            </div>
        </div>
    {{/if}}
    
    {{#if model.popularLocations}}
        <div class="container landing-popular-locations">
            <div class="row">
                <div class="col-md">
                    <div class="landing-popular-locations-label">Popular Locations</div>
                </div>
            </div>

            <div class="row">
                {{#each model.popularLocations as |location|}}
                    <div class="col-md-3">
                        <div class="landing-popular-location-city">{{location.city}}</div>
                        <div class="landing-popular-location-number">{{location.number}} restaurants</div>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/if}}
</div>