{{header-component login=true}}

<div class="container">
        <form class="form-horizontal">
            <div class="row">
                <div class="col-4">

                </div>
                <div class="col-md-1">
                    <legend class="login-label">Login</legend>
                </div>
                <div class="col-md-3">
                   {{#link-to 'register' class="login-create-acc-link"}}Create Account{{/link-to}}
                </div>
                <div class="col-4">

                </div>
            </div>

            <div class="row">
                <div class="col-4">

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <input id="email" name="email" type="text" placeholder="Email" class="form-control input-md login-input" required="">
                    </div>
                </div>
                <div class="col-4">

                </div>
            </div>


            <div class="row">
                <div class="col-4">

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <input id="password" name="password" type="password" placeholder="Password" class="form-control input-md login-input"
                            required="">
                    </div>
                </div>
                <div class="col-4">

                </div>
            </div>

            <div class="row">
                <div class="col-4">

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="signin"></label>
                        <button id="signin" name="signin" class="btn login-submit btn-block">Create Account</button>
                    </div>
                </div>
                <div class="col-4">

                </div>
            </div>
        </form>
    </div>
