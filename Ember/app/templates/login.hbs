{{header-component login=true}}

<div class="container">
        <form class="form-horizontal" {{action 'login' on='submit'}}>
            <div class="row">
                <div class="col-4">

                </div>
                <div class="col-md-1">
                    <legend class="login-label">Login</legend>
                </div>
                <div class="col-md-3">
                   {{#link-to 'register' class="login-create-acc-link"}}Create Account{{/link-to}}
                </div>
                <div class="col-4">

                </div>
            </div>

            <div class="row">
                <div class="col-4">

                </div>
                <div class="col-md-4">
                    {{#if loginErrors}}
                    <p class="form-error-text">{{errorMessage}}</p>
                    {{/if}}
                    <div class="form-group">
                        {{input id="email" type="text" placeholder="Email" class="form-control input-md login-input" value=email }}
                    </div>
                </div>
                <div class="col-4">

                </div>
            </div>

            <div class="row">
                <div class="col-4">

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{input id="password" type="password" placeholder="Password" class="form-control input-md login-input" value=password required="This field is required"}}
                    </div>
                </div>
                <div class="col-4">

                </div>
            </div>

            <div class="row">
                <div class="col-4">

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        
                        <button id="login" class="btn login-submit btn-block">
                            {{#if loading}}
                                <span class='fa fa-circle-o-notch fa-spin'></span> Logging in
                            {{else}}
                                Login
                            {{/if}}
                        </button>
                        
                    </div>
                </div>
                <div class="col-4">

                </div>
            </div>
        </form>
    </div>

